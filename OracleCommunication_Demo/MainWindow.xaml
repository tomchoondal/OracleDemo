                            <uc:HomeButtonControl x:Name="HomeChatButton"
                                    IsChatMinimized="{Binding BasicGuidanceVM.IsChatMinimized,Source={StaticResource MainVM}}"
                                    IsOpened="{Binding BasicGuidanceVM.IsControlOpened,Source={StaticResource MainVM}}"
                                    Visibility="{Binding DemoState, ConverterParameter=BasicGuidance, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <uc:RemoteSupportControl x:Name="HomeRemoteButton"
                                    Visibility="{Binding DemoState, ConverterParameter=RemoteSupport, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <uc:ConciergeButtonControl x:Name="ConciergeButton"
                                    Visibility="{Binding DemoState, ConverterParameter=Concierge, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <uc:PersonalShopperControl x:Name="PersonalShopperControl"
                                    Visibility="{Binding DemoState, ConverterParameter=PersonalShopper, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <uc:CollaborationControl x:Name="CollaborationControl"
                                    Visibility="{Binding DemoState, ConverterParameter=Collaboration, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                        </Grid>
                        <Grid x:Name="BasicGuidanceGrid"
                                Visibility="{Binding DemoState, ConverterParameter=BasicGuidance, Converter={StaticResource DemoStateToVisibilityConverter}}">
                            <uc:ChatControl
                                    IsFullScreen="{Binding BasicGuidanceVM.IsChatFullScreen, Source={StaticResource MainVM}}"
                                    IsOpen="{Binding BasicGuidanceVM.IsChatOpen, Source={StaticResource MainVM}}"
                                    x:Name="ChatControl" />
                            <Button x:Name="StopControlButton" Content="Remote control active, Tap to stop"
                                    VerticalAlignment="Top" Height="32" Style="{DynamicResource StopControlButton}"
                                    Visibility="Collapsed" Click="StopControlButton_Click" />
                        </Grid>
                        <Grid x:Name="tooltip1">
                            <Image Source="Images/Home_ToolTip1.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="60" Margin="10,9,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=BasicGuidance, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <Image Source="Images/Remote_ToolTip1.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="60" Margin="10,9,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=RemoteSupport, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <Image Source="Images/Concierge_ToolTip1.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="60" Margin="10,9,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=Concierge, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <Image Source="Images/Concierge_ToolTip1.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="60" Margin="10,9,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=PersonalShopper, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                        </Grid>
                        <Grid x:Name="tooltip2" Visibility="Collapsed">
                            <Image Source="Images/Home_ToolTip2.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="81" Margin="10,0,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=BasicGuidance, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <Image Source="Images/Remote_ToolTip2.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="81" Margin="10,0,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=RemoteSupport, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <Image Source="Images/Concierge_ToolTip2.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="81" Margin="10,0,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=Concierge, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                            <Image Source="Images/Concierge_ToolTip2.png" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom" Height="81" Margin="10,0,0,25"
                                    Visibility="{Binding DemoState, ConverterParameter=PersonalShopper, Converter={StaticResource DemoStateToVisibilityConverter}}" />
                        </Grid>
                        <Grid x:Name="RemoteSupportGrid"
                                Visibility="{Binding DemoState, ConverterParameter=RemoteSupport, Converter={StaticResource DemoStateToVisibilityConverter}}"
                                d:IsHidden="True">
                            <uc:VideoControl x:Name="RemoteVideoControl"
                                    CanDraw="{Binding RemoteSupportVM.IsDrawAllowed, Source={StaticResource MainVM}}"
                                    IsOpen="{Binding RemoteSupportVM.IsVideoShown, Source={StaticResource MainVM}}" />
                        </Grid>
                        <Grid x:Name="PersonalShopperGrid"
                                Visibility="{Binding DemoState, ConverterParameter=PersonalShopper, Converter={StaticResource DemoStateToVisibilityConverter}}"
                                d:IsHidden="True">
                            <uc:ShopperVideoControl
                                    IsOpen="{Binding PersonalShopperVM.IsVideoMaximized, Source={StaticResource MainVM}}" />
                        </Grid>
                        <Grid x:Name="ConciergeGrid"
                                Visibility="{Binding DemoState, ConverterParameter=Concierge, Converter={StaticResource DemoStateToVisibilityConverter}}"
                                d:IsHidden="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Button Content="Remote control active, Tap to stop" VerticalAlignment="Top" Height="32"
                                    Style="{DynamicResource StopControlButton}"
                                    Visibility="{Binding ConciergeVM.HasControl, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource MainVM}}"
                                    Click="StopControlButton_Click" />
                            <uc:ConciergeVideoControl Grid.Row="1"
                                    IsOpen="{Binding ConciergeVM.IsFullScreen,Source={StaticResource MainVM}}" />
                        </Grid>
                        <Grid x:Name="CollaborationGrid"
                                Visibility="{Binding DemoState, ConverterParameter=Collaboration, Converter={StaticResource DemoStateToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Button Content="You are sharing your screen, Tap to stop" VerticalAlignment="Top" Height="34"
                                    Style="{DynamicResource StopControlButton}"
                                    Visibility="{Binding CollaborationVM.IsUserScreenShared, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource MainVM}}"
                                    Click="StopPresentingCollaborationButtonClick" />
                            <uc:CollaborationVideoControl Grid.Row="1"
                                    IsVideoPresentingAllowed="{Binding CollaborationVM.IsVideoPresentingAllowed, Source={StaticResource MainVM}}"
                                    IsVideoSharingStarted="{Binding CollaborationVM.IsSharingAllowed, Source={StaticResource MainVM}}"
                                    IsOpen="{Binding CollaborationVM.IsVideoShown, Source={StaticResource MainVM}}" />
                        </Grid>
                        <uc:DialogControl Grid.Row="1" x:Name="Dialog" CloseDialog="Dialog_CloseDialog"
                                d:IsHidden="True"
                                IsOpen="{Binding DialogVM.IsDialogOpen, Source={StaticResource MainVM}}" />
                        <uc:ToastControl x:Name="ToastControl"
                                IsTabletMode="{Binding IsCollaboration,Source={StaticResource MainVM}}"
                                IsOpen="{Binding ToastVM.IsToastOpen, Source={StaticResource MainVM}}"
                                VerticalAlignment="Top" Margin="0,48,0,0" />
                        <Image Source="Images/Chrome_innerGlow2.png" IsHitTestVisible="False" Margin="-2,-1"
                                Visibility="{Binding IsCollaboration, Converter={StaticResource BooleanToVisibilityConverter}}" />
