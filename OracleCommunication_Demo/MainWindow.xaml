            <StackPanel Grid.Column="1" Grid.Row="1">
                <ComboBox SelectionChanged="ComboBox_SelectionChanged" x:Name="AppCombo">
                    <ComboBoxItem Content="Basic Guidance" IsSelected="True" />
                    <ComboBoxItem Content="Remote Support" />
                    <ComboBoxItem Content="Personal Shopper" />
                    <ComboBoxItem Content="Concierge" />
                    <ComboBoxItem Content="Collaboration" />
                </ComboBox>
                <Rectangle Fill="Black" VerticalAlignment="Top" Height="1" Margin="0,10" StrokeThickness="0" />
                <StackPanel IsEnabled="{Binding IsConnected}"
                        Visibility="{Binding DemoState, ConverterParameter=BasicGuidance, Converter={StaticResource DemoStateToVisibilityConverter}}">
                    <Button x:Name="StartAudioPromptButton" Content="Audio prompt" Click="AudioPromptButton_Click" />
                    <Button Content="Stop Audio prompt" x:Name="StopAudioPromptButton" Click="StopAudioButton_Click"
                            IsEnabled="False" />
                    <Button x:Name="TakeControlPromptButton" Content="Take Control prompt"
                            Click="TakeControlPromptButton_Click" IsEnabled="False" />
                    <Button x:Name="StopControlPromptButton" Content="Stop Control prompt" Click="StopButton_Click"
                            IsEnabled="False" />
                    <Button x:Name="StopServeButton" Content="Stop Service prompt" Click="StopServiceButton_Click" />
                </StackPanel>
                <StackPanel IsEnabled="{Binding IsConnected}"
                        Visibility="{Binding DemoState, ConverterParameter=RemoteSupport, Converter={StaticResource DemoStateToVisibilityConverter}}">
                    <Button x:Name="RemoteStartVideoSharing" Content="Start Video Prompt"
                            Click="RemoteStartVideoSharing_Click" />
                    <Button x:Name="RemoteStopVideoSharing" Content="Stop Video Prompt"
                            Click="RemoteStopVideoSharing_Click" IsEnabled="False" />
                    <Button x:Name="DrawOnVideoSharing" Content="Start Draw On Video" Click="DrawOnVideoButton_Click"
                            IsEnabled="{Binding RemoteSupportVM.IsSharingAllowed, Source={StaticResource MainVM}}" />
                    <StackPanel x:Name="RemoteNetworkGrid" IsEnabled="False">
                        <Button x:Name="ReconnectVideoButton" Content="Reconnect Video"
                                Click="ReconnectVideoButton_Click" />
                        <Button x:Name="TroubleReconnectingButton" Content="Trouble Reconnecting"
                                Click="TroubleReconnectingButton_Click" />
                        <Button x:Name="DowngradeVideoToAudioButton" Content="Downgrade to Audio"
                                Click="DowngradeVideoToAudioButton_Click" />
                    </StackPanel>
                    <Button x:Name="DisconnectAudioJackButton" Content="Disconnect Audio Jack"
                            Click="DisconnectAudioJackButton_Click" />
                    <Button x:Name="StopRemoteServeButton" Content="Stop Service prompt" Click="StopServiceButton_Click" />
                </StackPanel>
                <StackPanel IsEnabled="{Binding IsConnected}"
                        Visibility="{Binding DemoState, ConverterParameter=Concierge, Converter={StaticResource DemoStateToVisibilityConverter}}">
                    <Button x:Name="StopControlConciergeButton" Content="Stop Control Prompt"
                            IsEnabled="{Binding ConciergeVM.HasControl, Source={StaticResource MainVM}}"
                            Click="StopButton_Click" />
                    <Button x:Name="StopConciergeButton" Content="Stop Service" Click="StopServiceButton_Click" />
                </StackPanel>
                <StackPanel IsEnabled="{Binding IsConnected}"
                        Visibility="{Binding DemoState, ConverterParameter=PersonalShopper, Converter={StaticResource DemoStateToVisibilityConverter}}">
                    <Button x:Name="StopVideoPersonalShopperButton" Content="Stop Video"
                            Click="StopVideoPersonalShopperButton_Click" />
                    <Button x:Name="StopPersonalShopperButton" Content="Stop Service" Click="StopServiceButton_Click" />
                </StackPanel>
                <StackPanel
                        Visibility="{Binding DemoState, ConverterParameter=Collaboration, Converter={StaticResource DemoStateToVisibilityConverter}}">
                    <Button x:Name="StartServiceButton" Content="Start Service" Click="StartServiceButton_Click" />
                    <StackPanel IsEnabled="{Binding IsConnected}">
                        <Button x:Name="StartPresentingButton" Content="Start Presenting"
                                IsEnabled="{Binding CollaborationVM.CanPresentScreen, Source={StaticResource MainVM}}"
                                Click="StartPresentingButton_Click" />
                        <Button x:Name="StopPresentingButton" IsEnabled="False" Content="Stop Presenting"
                                Click="StopPresentingButton_Click" />
                        <Button x:Name="StartDrawButton" Content="Start Draw"
                                IsEnabled="{Binding CollaborationVM.IsVideoPresentingAllowed, Source={StaticResource MainVM}}"
                                Click="StartDrawButton_Click" />
                        <Button x:Name="ScheduleMeetingButton" Content="Schedule Meeting"
                                Click="ScheduleMeetingButton_Click" />
                        <Button x:Name="StopTwoWayVideoButton" Content="Stop Two-Way Video"
                                IsEnabled="{Binding CollaborationVM.IsSharingAllowed, Source={StaticResource MainVM}}"
                                Click="StopTwoWayVideoButton_Click" />
                        <Button x:Name="StopScreenShareButton" Content="Stop user scrn sharing"
                                Click="StopScreenShareButton_Click"
                                IsEnabled="{Binding CollaborationVM.IsUserScreenShared}" />
                        <Button Content="Stop Service" Click="StopServiceButton_Click" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
