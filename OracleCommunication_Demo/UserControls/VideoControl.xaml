                Fill="#FFF37A6F" Width="52" Height="73" Grid.Row="1" Margin="315,-41,0,0"
                RenderTransformOrigin="0.5,0.5" Opacity="0">
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </Grid>
</UserControl>
